{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve", // 识别jsx
    "noImplicitAny": false, // 隐式any
    "esModuleInterop": true,
    "experimentalDecorators": true, // 使用decorator
    "noEmit": true, // 解决 Error "Cannot write file ... because it would overwrite input file
    "baseUrl": ".", //和 paths搭配使用
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
  // "exclude": [
  //   "node_modules", 解决d.ts 无效
  //   "build"
  // ]
}