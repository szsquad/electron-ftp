  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main Porcess",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/main/main.js",
      "protocol": "inspector",
      "runtimeArgs": [
        "--watch",
        "src/main",
        "--exec",
        "electron",
        "."
      ],
      "restart": true
    }
  ]
}